<div class='box users-form'>
  <form class='field' {{action 'createUser' on='submit'}}>
    <div class='field'>
      <label class='label' for='username'>Username</label>
      <div class='control'>
        {{input id='username' class='input' placeholder='Enter your username' value=username}}
      </div>
    </div>

    <div class='field'>
      <label class='label' for='email'>Email</label>
      <div class='control'>
        {{input id='email' class='input' placeholder='Enter your email' value=email}}
      </div>
    </div>

    <div class='field'>
      <label class='label' for='password'>Password</label>
      <div class='control'>
        {{input id='password' class='input' placeholder='Enter your password' value=password}}
      </div>
    </div>

    <div class='field'>
      <label class='label' for='password-confirmation'>Password Confirmation</label>
      <div class='control'>
        {{input id='password-confirmation' class='input' placeholder='Confirm your password' value=password-confirmation}}
      </div>
    </div>

    <button class='button is-primary' type='button' name='button'>submit</button>
  </form>
</div>
